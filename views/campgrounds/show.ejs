<% layout('./layouts/boilerplate') %>
    <div class="row mb-4">
        <div class="col-6">
            <div class="card mb-3">
                <img class="card-img-top" src="<%=campground.image%>" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=campground.title%>
                    </h5>
                    <p class="card-text">
                        <%=campground.desc%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%=campground.location%>
                    </li>
                    <li class="list-group-item">Price:
                        <%=campground.price%>
                    </li>
                </ul>
                <div class="card-body">
                    <a class="btn btn-warning" href="/campgrounds/<%=campground._id%>/edit">edit</a>
                    <form class="d-inline" action="/campgrounds/<%=campground._id%>?_method=delete" method="post">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
                <div class="card-footer text-muted">
                    2 days ago
                </div>
            </div>
        </div>
        <div class="col-6">
            <form action="/campgrounds/<%=campground._id%>/review" method="POST" novalidate>
                <h3>Leave A Review</h3>
                <div class="mb-3">
                    <label class="form-lablel" for="reviewRating">Rating</label>
                    <input class="form-range" type="range" name="review[rating]" id="reviewRating" min="1" max="5">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="reviewBody">Review</label>
                    <textarea class="form-control" name="review[body]" id="reviewBody" cols="30" rows="2" required></textarea>
                </div>
                <button class="btn btn-success mb-3">Submit</button>
            </form>
            <% for(let review of campground.reviews) { %>
                <div class="card mb-3">
                    <div class="card-body">
                        <h6 class="card-title">
                            Rating:
                            <%= review.rating %>
                        </h6>
                        <p>
                            Review:
                            <%= review.body %>
                        </p>
                        <form action="/campgrounds/<%=campground._id%>/review/<%=review._id%>?_method=delete" method="POST"><button class="btn btn-sm btn-danger">Delete</button></form>
                    </div>
                </div>
                <% } %>
        </div>
    </div>